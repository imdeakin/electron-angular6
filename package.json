{
  "name": "electron-angular6",
  "version": "0.0.0",
  "private": true,
  "main": "main.ts",
  "scripts": {
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "ng:serve": "ng serve",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && electron-forge start",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-forge package --platform=win32",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "core-js": "^2.5.4",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.1",
    "@angular/cli": "~6.0.1",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.13.4",
    "electron-compile": "^6.4.2",
    "electron-compilers": "^5.9.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-download": "^4.1.0",
    "electron-forge": "^5.2.2",
    "electron-forge-template-angular2": "^1.0.6",
    "electron-forge-template-react": "^1.0.4",
    "electron-forge-template-react-typescript": "^1.0.6",
    "electron-forge-template-vue": "^1.0.3",
    "electron-installer-dmg": "^1.0.0",
    "electron-installer-snap": "^2.0.1",
    "electron-osx-sign": "^0.4.10",
    "electron-packager": "^12.0.2",
    "electron-prebuilt-compile": "2.0.0",
    "electron-rebuild": "^1.7.3",
    "electron-reload": "^1.2.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-to-chromium": "^1.3.46",
    "electron-windows-store": "^0.12.0",
    "electron-winstaller": "^2.6.4",
    "electron-wix-msi": "^1.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "npx": "^10.2.0",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
